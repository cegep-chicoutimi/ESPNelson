<Window x:Class="BorneSortie.View.BorneSortieView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BorneSortie.View"
        mc:Ignorable="d"
        Title="BorneSortie"  
        WindowStartupLocation="CenterScreen"
        Width="640" Height="480"
        MinWidth="640" MinHeight="480"
        Background="LightGreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Animation pour la transition -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0" To="1" Duration="0:0:0.5" />
        </Storyboard>
    </Window.Resources>


    <DockPanel>
        <!-- Barre supérieure pour la sélection de la langue -->
        <Border DockPanel.Dock="Top" Width="auto" Height="70" HorizontalAlignment="Center" BorderThickness="0,0,0,1" BorderBrush="LightGray">
            <StackPanel Orientation="Horizontal">
                <Label  Content="BORNE DE SORTIE" Foreground="Blue"  FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="Langue :" FontSize="25" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <ComboBox x:Name="languageComboBox" Width="100" Margin="0,0,20,0">
                    <ComboBoxItem Content="Français" Tag="fr"/>
                    <ComboBoxItem Content="English" Tag="en"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Panneau de navigation à gauche -->
        <Border Width="150" Padding="10" BorderThickness="0,0,1,0" BorderBrush="LightGray">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Image du logo CIUSSS -->
                <Image Source="../img/logo_ciuss.jpg"
            Stretch="Fill"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Width="Auto"
            Height="Auto"/>
                <!-- Bouton Visiteur -->
                <Button x:Name="btnVisiteur" Width="120" Height="80" Background="White" Click="BtnVisiteur_Click">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Account" Width="40" Height="50"/>
                        <TextBlock Text="Visiteur"/>
                    </StackPanel>
                </Button>

                <!-- Bouton Abonné -->
                <Button x:Name="btnAbonne" Width="120" Height="80" Background="White" Click="BtnAbonne_Click" Margin="0,50,0,0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountCheck" Width="40" Height="50"/>
                        <TextBlock Text="Abonné"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Zone d'affichage des vues -->
        <Frame x:Name="MainFrame"
                Grid.Column="1"
                NavigationUIVisibility="Hidden"
                Opacity="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" Margin="0,0,30,0">
            <Frame.Triggers>
                <EventTrigger RoutedEvent="Frame.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
                </EventTrigger>
            </Frame.Triggers>
        </Frame>
    </DockPanel>
</Window>
