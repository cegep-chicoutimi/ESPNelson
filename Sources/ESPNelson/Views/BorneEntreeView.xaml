<UserControl x:Class="ESPNelson.Views.BorneEntreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">

            <TextBlock Text="Borne d'Entrée - Génération de Ticket"
                       FontSize="22" FontWeight="Bold"
                       TextAlignment="Center" Margin="0,10"/>

            <Image Source="{Binding BarcodeImage}" Width="300" Height="100" Margin="10"/>

            <Button Content="Générer un Ticket"
                    Command="{Binding GenerateNewTicketCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="10"/>

            <TextBlock Text="Numéro du Ticket :"
                       FontSize="16" FontWeight="SemiBold" Margin="0,10"/>
            <TextBlock Text="{Binding TicketActuel.Id}" FontSize="18"/>

            <TextBlock Text="Date et Heure d'Entrée :"
                       FontSize="16" FontWeight="SemiBold" Margin="0,10"/>
            <TextBlock Text="{Binding TicketActuel.DateHeureEntree, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}"
                       FontSize="18"/>

            <Button Content="Passer à la Borne de Paiement"
                    Command="{Binding OpenPaymentWindowCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
