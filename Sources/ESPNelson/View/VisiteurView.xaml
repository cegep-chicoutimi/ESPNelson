<Page x:Class="ESPNelson.View.VisiteurView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:ESPNelson.ViewModel"
      Title="VisiteurView"
      Background="White">

    <Page.DataContext>
        <vm:VisiteurVM />
    </Page.DataContext>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0"
                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                   Text="Génération de Ticket Visiteur"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10"/>

        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" Width="Auto">
                <!-- Carte -->
                <materialDesign:Card Padding="16" Margin="16" HorizontalAlignment="Center" Width="Auto">
                    <StackPanel>
                        <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Text="{Binding TicketActuel.Id, StringFormat='Numéro du ticket : {0}'}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Text="{Binding TicketActuel.TempsArrive, StringFormat='Date et heure d\arrivée : {0:dd/MM/yyyy HH:mm:ss}'}"
                                   HorizontalAlignment="Center"/>
                        <Image Source="{Binding BarcodeImage}" Width="300" Height="100" HorizontalAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Boutons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Command="{Binding GenerateNewTicketCommand}" Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Ticket" Width="24" Height="24"/>
                            <TextBlock Text="Générer un ticket"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DownloadTicketPDFCommand}" Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Download" Width="24" Height="24"/>
                            <TextBlock Text="Télécharger le ticket"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
