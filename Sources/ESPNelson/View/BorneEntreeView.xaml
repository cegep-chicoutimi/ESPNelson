<Window x:Class="ESPNelson.View.BorneEntreeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Borne d'Entrée"
        WindowStartupLocation="CenterScreen"
        Width="640" Height="480"
        Background="LightGreen"
        ResizeMode="CanResizeWithGrip">
    <!-- Permettre le redimensionnement de la fenêtre -->

    <!-- Définir les ressources de la fenêtre -->
    <Window.Resources>
        <!-- Animation pour la transition -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:0.5" />
        </Storyboard>

        <!-- Style pour les boutons ronds -->
        <Style x:Key="RoundTabButtonStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border
                                Background="{TemplateBinding Background}"
                                CornerRadius="50"
                                Width="80"
                                Height="80"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="0,20">
                                <ContentPresenter
                                    Content="{TemplateBinding Header}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Définir les lignes pour organiser les éléments -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Ligne pour le logo et le titre -->
            <RowDefinition Height="Auto" />
            <!-- Ligne pour le sous-titre -->
            <RowDefinition Height="*" />
            <!-- Ligne pour le contenu principal -->
        </Grid.RowDefinitions>

        <!-- Titre -->
        <Label Content="HÔPITAL DE CHICOUTIMI" Foreground="Blue" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,10" />
    

        <!-- Sous-titre -->
        <Label Grid.Row="1" Content="BORNE D'ENTRÉE" Foreground="DarkBlue"  FontSize="25" HorizontalAlignment="Center" Margin="0,10,0,20" />

        <!-- Contenu principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- Colonne pour le TabControl -->
                <ColumnDefinition Width="*" />
                <!-- Colonne pour le Frame -->
            </Grid.ColumnDefinitions>

            <!-- TabControl stylisé pour ressembler à NavigationRail -->
            <TabControl
                x:Name="NavigationTabs"
                Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                TabStripPlacement="Left"
                SelectedIndex="0"
                SelectionChanged="NavigationTabs_SelectionChanged"
                VerticalAlignment="Center"
                Margin="16,0,0,0"
                Padding="0">

                <!-- Onglet Visiteur -->
                <TabItem Header="Visiteur" Style="{StaticResource RoundTabButtonStyle}">
                    <TabItem>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Account" Width="40" Height="50" />
                            <TextBlock Text="Visiteur" FontSize="14" Margin="0,8,0,0" />
                        </StackPanel>
                    </TabItem>
                </TabItem>

                <!-- Onglet Abonné -->
                <TabItem Header="Abonné" Style="{StaticResource RoundTabButtonStyle}">
                    <TabItem>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="AccountCheck" Width="24" Height="24" />
                            <TextBlock Text="Abonné" FontSize="14" Margin="0,8,0,0" />
                        </StackPanel>
                    </TabItem>
                </TabItem>
            </TabControl>

            <!-- Frame pour afficher les vues avec animation -->
            <Frame
                x:Name="MainFrame"
                Grid.Column="1"
                NavigationUIVisibility="Hidden"
                Margin="16"
                Opacity="0">
                <Frame.Triggers>
                    <EventTrigger RoutedEvent="Frame.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}" />
                    </EventTrigger>
                </Frame.Triggers>
            </Frame>
        </Grid>
    </Grid>
</Window>