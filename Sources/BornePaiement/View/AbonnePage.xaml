<Page x:Class="BornePaiement.View.AbonnePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Paiement - Abonné">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">

        <TextBlock Text="Scan du badge d'abonnement" FontSize="20" FontWeight="Bold" Margin="0,10"/>

        <TextBox Text="{Binding AbonnementId}" Width="200" Margin="5" 
                 md:HintAssist.Hint="Scannez votre badge..." />

        <Button Content="Vérifier" Command="{Binding VerifierAbonnementCommand}" Width="150" Margin="10"/>
    </StackPanel>
</Page>
