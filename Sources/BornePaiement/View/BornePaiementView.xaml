<Window x:Class="BornePaiement.View.BornePaiementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:BornePaiement.ViewModel"
        Title="Borne de Paiement" Height="300" Width="400">

    <Window.DataContext>
        <viewmodel:BornePaiementVM />
    </Window.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Borne de Paiement" FontSize="20" FontWeight="Bold" TextAlignment="Center" />

            <!-- Simule un placeholder -->
            <Grid>
                <TextBox Text="{Binding TicketId, UpdateSourceTrigger=PropertyChanged}" Width="200" />
                <TextBlock Text="Scanner le ticket ici..."
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False"
                           Visibility="{Binding TicketId, Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>

            <Button Content="Valider Ticket" Command="{Binding ScanTicketCommand}" Margin="10" />

            <TextBlock Text="Montant à payer :" FontSize="16" FontWeight="SemiBold" Margin="5"/>
            <TextBlock Text="{Binding MontantAPayer, StringFormat=C}" FontSize="18" />
        </StackPanel>
    </Grid>
</Window>
