<Page x:Class="Administration.View.GestionView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="GestionView">
    
    

    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Barre contenant le titre de la page en haut -->
        <Border DockPanel.Dock="Top" Background="DarkBlue" Height="60">
            <TextBlock Text="CONSOLE DE GESTION" Foreground="White" 
                       FontSize="24" FontWeight="Bold" VerticalAlignment="Center"
                       HorizontalAlignment="Center" Padding="10"/>
        </Border>

       
        <materialDesign:Card DockPanel.Dock="Top" Margin="10">
            <TabControl
                materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                SnapsToDevicePixels="True"
        
                TabStripPlacement="Left"
                Padding="10">

                <!-- Onglet Utilisateurs -->
                <TabItem Width="155" Height="150" BorderThickness="0,0,1,0" BorderBrush="LightGray" VerticalAlignment="Center" Margin="0, 20">
                    <TabItem.Header >
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="100" >
                            <materialDesign:PackIcon Kind="AccountGroup" Width="50" Height="50" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="label_Users"  TextWrapping="Wrap"  HorizontalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>

                    <StackPanel Margin="16">
                        <TextBlock Text="Liste des administrateurs" FontWeight="Bold" FontSize="40" 
                                   HorizontalAlignment="Center"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">

                            <DataGrid ItemsSource="{Binding Administrateurs, Mode=OneWay}" 
                                      SelectedItem="{Binding UtilisateurSelectionne}" 
                                      AutoGenerateColumns="False"
                                      Style="{StaticResource MaterialDesignDataGrid}" 
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Height="200"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      CanUserAddRows="False"
                                      AlternatingRowBackground="{DynamicResource MaterialDesignPaper}"> 

                                <!-- Colonne Nom utilisateur -->
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nom utilisateur" 
                                                        Binding="{Binding NomUtilisateur}" 
                                                        Width="2*" />   

                                    <!-- Colonne Email -->
                                    <DataGridTextColumn Header="Email" 
                                                        Binding="{Binding Email}" 
                                                        Width="3*" />   
                                </DataGrid.Columns>
                            </DataGrid>

                        </ScrollViewer>


                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="Ajouter" Command="{Binding AjouterUtilisateurCommand}" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Width="100" Height="50"/>

                            <Button Content="Modifier" Command="{Binding ModifierUtilisateurCommand}" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Visibility="{Binding BoutonsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                    Margin="50,0,0,0" Width="100" Height="50"/>

                            <Button Content="Supprimer" Command="{Binding SupprimerUtilisateurCommand}" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Visibility="{Binding BoutonsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                    Margin="50,0,0,0" Width="100" Height="50"/>
                        </StackPanel>
                    </StackPanel>

                </TabItem>

                <!-- Onglet Tarifications -->
                <TabItem Width="155" Height="150" BorderThickness="0,0,1,0" BorderBrush="LightGray" VerticalAlignment="Center" Margin="0, 20">
                    <TabItem.Header>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CashMultiple" Width="40" Height="50" HorizontalAlignment="Center"/>
                            <TextBlock Text="Tarifications"  TextWrapping="Wrap" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>

                    <StackPanel Orientation="Vertical" Margin="16">
                        <TextBlock Text="Tarifications prédéfinies" FontWeight="Bold" FontSize="40" 
                                   HorizontalAlignment="Center"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
                            
                        </ScrollViewer>

                        <DataGrid ItemsSource="{Binding Tarifications, Mode=OneWay}" 
                                  SelectedItem="{Binding TarificationSelectionnee}"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  AutoGenerateColumns="False"
                                  Style="{StaticResource MaterialDesignDataGrid}"
                                  Height="200"
                                  HorizontalAlignment="Center"
                                  Margin="10"
                                  CanUserAddRows="False">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Niveau" Binding="{Binding Niveau}" Width="*"/>
                                <DataGridTextColumn Header="Prix (en $)" Binding="{Binding Prix}" Width="*"/>
                                <DataGridTextColumn Header="Durée Min (heure)" Binding="{Binding DureeMin}" Width="*"/>
                                <DataGridTextColumn Header="Durée Max (heure)" Binding="{Binding DureeMax}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>


                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="Modifier" Command="{Binding ModifierTarificationCommand}" 
                                    IsEnabled="{Binding TarificationSelectionnee, Converter={StaticResource NullToBooleanConverter}}" 
                                    Margin="5" Width="100" Height="50"/>
                        </StackPanel>
                    </StackPanel>
                </TabItem>

                <!-- Onglet Configurations -->
                <TabItem Width="155" Height="150" BorderThickness="0,0,1,0" BorderBrush="LightGray" VerticalAlignment="Center" Margin="0, 20">
                    <TabItem.Header>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CogOutline" Width="40" Height="50" HorizontalAlignment="Center"/>
                            <TextBlock Text="Configurations" TextWrapping="Wrap" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>

                    <StackPanel Margin="20">
                        <Label x:Name="label_ListDirectors" FontWeight="Bold" FontSize="40" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="C'est la configuration la plus récente qui est appliquée à tous le système" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <DataGrid ItemsSource="{Binding Configurations, Mode=OneWay}" 
                                  SelectedItem="{Binding ConfigurationSelectionnee}"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  AutoGenerateColumns="False"
                                  Style="{StaticResource MaterialDesignDataGrid}"
                                  Height="200"
                                  HorizontalAlignment="Stretch"
                                  Margin="10"
                                  CanUserAddRows="False">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Capacité max" Binding="{Binding CapaciteMax}" Width="*"/>
                                <DataGridTextColumn Header="Taxe fédérale" Binding="{Binding TaxeFederal, StringFormat='{}{0:C}'}"  Width="*"/>
                                <DataGridTextColumn Header="Taxe provinciale" Binding="{Binding TaxeProvincial, StringFormat='{}{0:C}'}"  Width="*"/>
                                <DataGridTextColumn Header="Date de modification" Binding="{Binding DateModification, StringFormat='dd/MM/yyyy HH:mm'}" Width="*"/>
                                <DataGridTextColumn Header="Faite par" Binding="{Binding Utilisateur.NomUtilisateur, TargetNullValue='Admin supprimé'}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button x:Name="label_Add" Command="{Binding AjouterConfigurationCommand}" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                     Width="100" Height="50"/>

                            <Button x:Name="label_Delete" Command="{Binding SupprimerConfigurationCommand}" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Visibility="{Binding ConfigurationSelectionnee, Converter={StaticResource NullToBooleanConverter}}"
                                    Margin="50,0,0,0" Width="100" Height="50"/> 
                        </StackPanel>
                    </StackPanel>
                </TabItem>

            </TabControl>
        </materialDesign:Card>
    </DockPanel>
</Page>
